<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mshack.incubateind.inconnect.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:src="@drawable/baseline_account_circle_black_36dp"
                android:layout_margin="25dp"
                android:id="@+id/imageView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Varsha J"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:drawablePadding="10dp"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_below="@id/imageView"
                android:id="@+id/imageView2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dayananda Sagar College of Engineering"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:drawablePadding="10dp"
                android:layout_gravity="start"
                android:textAlignment="center"
                android:layout_below="@id/imageView2"
                android:id="@+id/imageView3"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/imageView3"
                android:id="@+id/imageView4"
                android:layout_margin="10dp"
                android:background="#000111"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Badges"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="15dp"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:id="@+id/text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hackathons"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:layout_below="@id/text"
                    android:id="@+id/hacks"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scrollbars="vertical"
                    android:padding="5dp"
                    android:layout_below="@id/hacks"
                    android:id="@+id/hacks_badges">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="120dp"
                                android:src="@drawable/silver"
                                android:layout_marginLeft="5dp"/>

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="120dp"
                                android:src="@drawable/gold"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>
                    </RelativeLayout>
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workshops"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:layout_below="@id/hacks_badges"
                    android:id="@+id/workshops"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scrollbars="vertical"
                    android:padding="5dp"
                    android:layout_below="@id/workshops"
                    android:id="@+id/workshops_badges"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="120dp"
                                android:src="@drawable/silver"
                                android:layout_marginLeft="5dp"/>

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="120dp"
                                android:src="@drawable/gold"
                                android:layout_marginLeft="5dp"/>
                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="120dp"
                                android:src="@drawable/bronze"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>
                    </RelativeLayout>
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Talks"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorBlack"
                    android:drawablePadding="10dp"
                    android:layout_below="@id/workshops_badges"
                    android:id="@+id/talks"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scrollbars="vertical"
                    android:padding="5dp"
                    android:layout_below="@id/talks"
                    android:id="@+id/talks_badges">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:src="@drawable/gold"
                        android:layout_marginLeft="5dp"/>
                </ScrollView>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
